{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": [
      "es6",
      "dom",
      "es2015.iterable"
    ],
    "baseUrl": "./src",
    "paths": {
      "@app/screens/*": [
        "./app/screen/*"
      ],
      "@app/shared/*": [
        "./app/shared/*"
      ],
      "@app/store": [
        "./app/store/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
